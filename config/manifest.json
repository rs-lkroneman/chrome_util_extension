{
  "manifest_version": 2,
  "name": "Chrome Util Runner",
  "description": "A command runner inspired by Alfred, Cmd+Shift+P (Vscode, Chrome Devtools), Cmd+Shift+A (Intellij)",
  "version": "1.3",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "options_page": "options.html",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "description": "Pin or unpin the current tab.",
      "suggested_key": {
        "default": "Ctrl+Space",
        "windows": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      }
    },
    "pin_unpin_tab": {
      "description": "Pin or unpin the current tab.",
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X"
      }
    },
    "move_tab_left": {
      "suggested_key": {
        "default": "Shift+Alt+Left",
        "windows": "Shift+Alt+Left",
        "mac": "MacCtrl+Shift+Left"
      },
      "description": "Move selected tab(s) left"
    },
    "move_tab_right": {
      "suggested_key": {
        "default": "Shift+Alt+Right",
        "windows": "Shift+Alt+Right",
        "mac": "MacCtrl+Shift+Right"
      },
      "description": "Move selected tab(s) right"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "content_security_policy": "script-src 'self' 'sha256-ELkDE2InNI702G86lymxXYBdrcJq5bMn8+PhTgN6cks='; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}
